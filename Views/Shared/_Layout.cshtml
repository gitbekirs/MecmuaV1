<!DOCTYPE html>
<html class="no-js" lang="tr">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>@ViewData["Title"] - Mecmua</title>
    <meta name="description" content="">
    <meta name="author" content="">

   <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/css/abstract/styles.css">
    <link rel="stylesheet" href="~/css/abstract/vendor.css">

    <!-- script
    ================================================== -->
    <script src="~/js/abstract/modernizr.js"></script>

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/logo.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/logo.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/logo.png">
    <link rel="manifest" href="~/site.webmanifest">

</head>

<body id="top">


    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader"></div>
    </div>


    <!-- header
    ================================================== -->
    <header class="s-header">

        <div class="row s-header__content">

            <div class="s-header__logo">
                <a class="logo" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="Homepage">
                </a>
            </div>

            <nav class="s-header__nav-wrap">

                <h2 class="s-header__nav-heading h6">Site Navigation</h2>

                <ul class="s-header__nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "current" : "")">
                        <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="has-children">
                        <a href="#0">Kategoriler</a>
                        <ul class="sub-menu">
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="tasarim">Tasarım</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="yasam-tarzi">Yaşam Tarzı</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="fotograf">Fotoğraf</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="tatil">Tatil</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="is">İş</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="saglik">Sağlık</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="aile">Aile</a></li>
                            <li><a asp-controller="Home" asp-action="Category" asp-route-slug="iliskiler">İlişkiler</a></li>
                        </ul>
                    </li>
                    <li class="has-children">
                        <a href="#0">Blog</a>
                        <ul class="sub-menu">
                            <li><a asp-controller="Article" asp-action="Index" asp-route-type="video">Video Yazıları</a></li>
                            <li><a asp-controller="Article" asp-action="Index" asp-route-type="audio">Ses Yazıları</a></li>
                            <li><a asp-controller="Article" asp-action="Index" asp-route-type="gallery">Galeri Yazıları</a></li>
                            <li><a asp-controller="Article" asp-action="Index" asp-route-type="standard">Standart Yazılar</a></li>
                        </ul>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "current" : "")">
                        <a asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "current" : "")">
                        <a asp-controller="Home" asp-action="Contact">İletişim</a>
                    </li>
                </ul> <!-- end header__nav -->

                <a href="#0" title="Close Menu" class="s-header__overlay-close close-mobile-menu">Kapat</a>

            </nav> <!-- end header__nav-wrap -->
                   
            <a class="s-header__toggle-menu" href="#0" title="Menu"><span>Menü</span></a>
            
            <div class="s-header__search">
                    
                <form role="search" method="get" class="s-header__search-form" asp-controller="Home" asp-action="Search">
                    <label>
                        <span class="hide-content">Ara:</span>
                        <input type="search" class="s-header__search-field" placeholder="Anahtar Kelimeler" value="" name="q" autocomplete="off">
                    </label>
                    <input type="submit" class="s-header__search-submit" value="Ara">
                </form>

                <a href="#0" title="Close Search" class="s-header__overlay-close">Kapat</a>

            </div> <!-- end search wrap -->	

            <a class="s-header__search-trigger" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10 18a7.952 7.952 0 004.897-1.688l4.396 4.396 1.414-1.414-4.396-4.396A7.952 7.952 0 0018 10c0-4.411-3.589-8-8-8s-8 3.589-8 8 3.589 8 8 8zm0-14c3.309 0 6 2.691 6 6s-2.691 6-6 6-6-2.691-6-6 2.691-6 6-6z"></path></svg>
            </a>

        </div> <!-- end s-header__content -->

    </header> <!-- end header -->

    @RenderBody()

    <!-- footer
    ================================================== -->
    <footer class="s-footer">

        <div class="s-footer__main">

            <div class="row">

                <div class="column large-4 medium-6 tab-12 s-footer__info">

                    <h5>Sitemiz Hakkında</h5>

                    <p>
                    Mecmua, dijital içerik paylaşım platformudur. Kullanıcılarımıza en iyi deneyimi sunmak ve içeriklerini güvenle saklamalarını, düzenlemelerini ve paylaşmalarını sağlamaktır.
                    </p>

                </div> <!-- end s-footer__info -->

                <div class="column large-2 medium-3 tab-6 s-footer__site-links">

                    <h5>Site Bağlantıları</h5>

                    <ul>
                        <li><a asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                    </ul>

                </div> <!-- end s-footer__site-links -->  

                <div class="column large-2 medium-3 tab-6 s-footer__social-links">

                    <h5>Sosyal Medya</h5>

                    <ul>
                        <li><a href="#0">Twitter</a></li>
                        <li><a href="#0">Facebook</a></li>
                        <li><a href="#0">Instagram</a></li>
                        <li><a href="#0">LinkedIn</a></li>
                    </ul>

                </div> <!-- end s-footer__social links --> 

                <div class="column large-4 medium-12 s-footer__subscribe">

                    <h5>Abone Olun</h5>

                    <p>Güncel kalmak için bültenimize abone olun.</p>

                    <div class="subscribe-form">
                
                        <form id="mc-form" class="group" method="post" asp-controller="Home" asp-action="Subscribe">

                            <input type="email" value="" name="email" class="email" id="mc-email" placeholder="E-Posta Adresiniz" required=""> 
                
                            <input type="submit" name="subscribe" value="Abone Ol">
                
                            <label for="mc-email" class="subscribe-message"></label>
                
                        </form>

                    </div>

                </div> <!-- end s-footer__subscribe -->

            </div> <!-- end row -->

        </div> <!-- end s-footer__main -->

        <div class="s-footer__bottom">
            <div class="row">
                <div class="column">
                    <div class="ss-copyright">
                        <span>© Copyright Mecmua @DateTime.Now.Year</span> 
                        <span>Tüm Hakları Saklıdır</span>
                    </div> <!-- end ss-copyright -->
                </div>
            </div> 

            <div class="ss-go-top">
                <a class="smoothscroll" title="Back to Top" href="#top">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M6 4h12v2H6zm5 10v6h2v-6h5l-6-6-6 6z"/></svg>
                </a>
            </div> <!-- end ss-go-top -->
        </div> <!-- end s-footer__bottom -->

    </footer> <!-- end s-footer -->

    <!-- Java Script
    ================================================== -->
    <script src="~/js/abstract/jquery-3.2.1.min.js"></script>
    <script src="~/js/abstract/plugins.js"></script>
    <script src="~/js/abstract/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
